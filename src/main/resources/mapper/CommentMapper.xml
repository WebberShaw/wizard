<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hunau.dao.CommentDao">
    <insert id="addComment">
        INSERT INTO comment ( content,user_id,answer_id)VALUES(#{content},#{userId},#{answerId});
    </insert>
    <select id="getAllComment" resultType="edu.hunau.model.Comment">
        SELECT * FROM comment where answer_id =#{answerId} ORDER BY likes desc ;
    </select>
    <delete id="deleteById">
        DELETE FROM comment WHERE id = #{id};
    </delete>
    <update id="addLikesById">
        UPDATE comment SET likes = likes+1 WHERE  id= #{id};
    </update>
    <update id="cancelLikesById">
        UPDATE comment SET likes = likes-1 WHERE  id= #{id};
    </update>



</mapper>